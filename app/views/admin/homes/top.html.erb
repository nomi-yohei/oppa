<h1>Admin::Homes#top</h1>
<p>Find me in app/views/admin/homes/top.html.erb</p>
<div class ="container" style="margin-top: 30px;">
  <%= month_calendar events: @class_task do |date| %>
    <div class="date-day">
      <%= date.day %>:<br>
        <% if TaskContent.where(task_times: date).count >0 %>
          <%= link_to admin_class_task_path(date) do %>
            本日の授業は<%= TaskContent.where(task_times: date).count %>コマです
          <% end %>
        <% end %>
      </div>
  <% end %>
</div>