<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/users/shared/error_messages", resource: resource %>
<div class="field">
    <%= f.label :氏名 %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" ,placeholder: "山田 太郎"%>
  </div>
  <br/>
  <div class="field">
    <%= f.label :学籍番号9桁 %><br />
    <%= f.text_field :my_number, autofocus: true, autocomplete: "my_number",placeholder: "201X〇〇〇〇〇" %>
  </div>
  <div class="field">
    <%= f.label :学年 %><br />
    <%= f.number_field :my_grade, min: 1 ,max: 4 , value: 1,autofocus: true, autocomplete: "my_grade" %>年
  </div>
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
<!--  <div class="field">
    <%#= f.label :授業の受講 %><br />
    <%#= f.collection_select  :class_task_id,ClassTask.all,:id,:name ,{disabled: true},{prompt: '授業を選択してください',}  %>

  </div> -->
  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/users/shared/links" %>
