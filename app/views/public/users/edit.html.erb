<div class="container">
	<h3>個人情報の変更</h3>
</div>
<div class="container" style="text-align: center;">
	<div class="row">
		<%= form_with(model:@user,url: users_path(@user),method: :patch,local:true)do |f| %>
			<div class="field" style="margin-top: 40px;">
    			<%= f.label :氏名 %><br />
    			<%= f.text_field :name, autofocus: true, autocomplete: "name" ,placeholder: "山田 太郎"%>
			</div><br/>
  			<div class="field">
    			<%= f.label :学籍番号9桁 %><br />
    			<%= f.text_field :my_number, autofocus: true, autocomplete: "my_number",placeholder: "201X〇〇〇〇〇" %>
  			</div>
  			<div class="field">
    			<%= f.label :学年 %><br />
    			<%= f.number_field :my_grade, min: 1 ,max: 4 , value: 1,autofocus: true, autocomplete: "my_grade" %>年
  			</div>
  			<div class="field">
    			<%= f.label :メールアドレス %><br />
    			<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  			</div>
  			<div class="actions">
    			<%= f.submit "編集する" %>
  			</div>
		<% end %>
	</div>
</div>
<div class="container">
  <%= link_to users_path do %>
  <h4>前ページへ戻ります</h4>
  <% end %>
</div>
